{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDirs": ["src", "../shared/src"],
    "paths": {
      "@shared/*": ["../shared/src/*"],
      "@shared/firestore-adapter": ["./src/firestore-adapter"]
    },
  },
  "compileOnSave": true,
  "include": [
    "src",
    "../shared/src"
  ]
}
